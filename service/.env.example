# Environment variables for development

# Server
PORT=3000
NODE_ENV=development

# AzuraCast API
AZURACAST_BASE_URL=http://localhost:8000
AZURACAST_STATION_ID=1
AZURACAST_API_KEY=

# Database (SQLite)
# The database file will be created at: data/radio_cesar.db
DATABASE_URL=./data/radio_cesar.db

# JWT
JWT_SECRET=radio-cesar-secret-key-change-in-production

# CORS
CORS_ORIGIN=http://localhost:5173

# File uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
